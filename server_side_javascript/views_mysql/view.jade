doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/list') Server Side JavaScript
    ul
      each board in boards
        li
          a(href='/list/'+board.board_no)= board.board_title
    artcle
      if board
        h2= board.board_title
        = board.board_content
        div= 'by '+board.board_user
      else
        h2 Welcome
        | This is server side javascript tutorial.
    ul
      li
        a(href='/board/add') add
      if topic
        li
          a(href='/board/'+board.board_no+'/edit') edit
        li
          a(href='/board/'+board.board_no+'/delete') delete
